@using EPiServer.Core
@model EpiCMSHovik.Models.Pages.SitePageData

<div class="block span8">
    @if (Model.HasTemplate())
    {
        <a href="@Url.PageUrl(Model.LinkURL)">
            <div class="media">
                <div class="mediaImg">
                    <img src="@Url.ContentUrl(Model.PageImage)" />
                </div>
                <h2>@Model.PageName</h2>
                <p>@Html.PropertyFor(x => x.TeaserText)</p>
            </div>
        </a>
    }
    else
    {
        <div class="media">
            <div class="mediaImg">
                <img src="@Url.ContentUrl(Model.PageImage)" />
            </div>
            <h2>@Model.PageName</h2>
            <p>@Html.PropertyFor(x => x.TeaserText)</p>
        </div>

    }
</div>
